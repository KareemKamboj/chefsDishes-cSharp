

<div class="text-center">
    <div class="text-align">
    <a href="/">Chefs</a> | Dishes | <a href="/chefs/new">Add a Chef</a> | <a href="/dishes/new">Add a Dish</a>
    </div>
</div>

@model List<Dish>
    
<div>
    <h3>Yum! Check out our tasty dishes!</h3>

<table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Chef</th>
                    <th>Tastiness</th>
                    <th>Calories</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Dish dish in Model)
                {
                <tr>
                    <td>@dish.Name</td>
                    <td>@dish.Author.FirstName @dish.Author.LastName</td>
                    <td>@dish.Tastiness</td>
                    <td>@dish.Calories</td>
                </tr>
                }
            </tbody>
        </table>
</div>
