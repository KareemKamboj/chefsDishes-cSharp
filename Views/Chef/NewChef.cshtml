@model Chef

<div class="text-center">
    <div class="text-align">
    <h1 class="display-4">Add a chef</h1>
    <a href="/">Chefs</a> | <span><a href="/dishes">Dishes</a></span> | Add a Chef | <a href="/dishes/new">Add a Dish</a>
    </div>
</div>

<div class="container w-75 mx-auto">

    <form 
    class="shadow p-3 rounded"
    asp-controller="Chef"
    asp-action="Create"
    method="POST">
    
    <div class="mb-3">
        <label asp-for="FirstName"></label>
        <span asp-validation-for="FirstName" class="text-danger font-weighted-bold"></span>
        <input class="form-control" asp-for="FirstName" />
    </div>

    <div class="mb-3">
        <label asp-for="LastName"></label>
        <span asp-validation-for="LastName" class="text-danger font-weighted-bold"></span>
        <input class="form-control" asp-for="LastName" />
    </div>

    <div class="mb-3">
        <label asp-for="DOB"></label>
        <span asp-validation-for="DOB" class="text-danger font-weighted-bold"></span>
        <input type="date" class="form-control" asp-for="DOB" />
    </div>

    <button class="btn btn-success">Add Chef</button>
    </form>
</div>