@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="text-align">
    Chefs | <span><a href="/dishes">Dishes</a></span> | <a href="/chefs/new">Add a Chef</a> | <a href="/dishes/new">Add a Dish</a>
    </div>
</div>

@model List<Chef>
    
<div>
    <h3>Check out our roster of chefs!</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Age</th>
                    <th># of Dishes</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Chef chef in Model)
                {

                    var age = DateTime.Now.Year - @chef.DOB.Year;
                <tr>
                    <td>@chef.FirstName @chef.LastName</td>
                    <td>@age</td>
                    <td>@chef.ChefDishes.Count</td>
                </tr>
                }
            </tbody>
        </table>
</div>
